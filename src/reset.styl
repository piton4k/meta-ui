html
  box-sizing border-box
  font-size 16px

*, *:before, *:after
  box-sizing inherit

body, h1, h2, h3, h4, h5, h6, p, ol, ul
  margin 0
  padding 0
  font-weight normal

ol, ul
  list-style none

img
  max-width 100%
  height auto


h1, h2, h3, h4, h5, h6
  font-weight bold
  margin 0.5rem 0

h1
  font-size 2em
h2
  font-size 1.5em
h3
  font-size 1.3em
h4
  font-size 1em
h5
  font-size 0.8em
h6
  font-size 0.7em
